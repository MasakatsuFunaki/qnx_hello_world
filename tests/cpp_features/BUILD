# BUILD file for C++ language feature tests
# Each target compiles as a standalone binary to verify the toolchain
# handles the specific C++ feature correctly.

cc_binary(
    name = "templates",
    srcs = ["templates.cpp"],
    copts = ["-std=c++17"],
)

