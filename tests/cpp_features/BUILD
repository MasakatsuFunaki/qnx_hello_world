    copts = ["-std=c++17"],
)

cc_binary(
    name = "exceptions",
    srcs = ["exceptions.cpp"],
    copts = ["-std=c++17"],
)

cc_binary(
    name = "cpp17_types",
    srcs = ["cpp17_types.cpp"],
    copts = ["-std=c++17"],
)
